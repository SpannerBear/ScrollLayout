<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ScrollLayout">

        <attr name="scr_minOffset" format="dimension" />

        <attr name="scr_maxOffset" format="dimension" />

        <attr name="scr_exitOffset" format="dimension" />

        <attr name="scr_mode">
            <flag name="open" value="0x0" />
            <flag name="close" value="0x1" />
            <flag name="exit" value="0x2" />
        </attr>

        <attr name="scr_allowHorizontalScroll" format="boolean"/>

        <attr name="scr_isSupportExit" format="boolean"/>

    </declare-styleable>

</resources>